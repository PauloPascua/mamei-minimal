<div class="grid">

  <div class="grid__item post-large--two-thirds push--post-large--one-sixth">

    <div class="rte">
      {{ page.content }}

      <div class="grid">
        <div class="grid__item large--one-quarter">
          <h3 style="float: right;">Jewellery</h3>
          {% for link in linklists.collections.links %}
            {% assign child_list_handle = link.title | handleize %}
            {% if linklists[child_list_handle].links != blank %}
              <ul id="{{ link.title | replace: ' ', '-' | downcase }}" class="tag-menu" style="list-style: none; float: right; text-align: right";>
                {% for childlink in linklists[child_list_handle].links %}
                  <li>
                    <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          {% endfor %}
        </div>
        <div class="grid__item large--one-half">
          <p>slideshow</p>
        </div>
        <div class="grid__item large--one-quarter">
          <h3>Collection</h3>
          <ul class="collection-menu" style="list-style: none; margin-left: 0;">
            {% for link in linklists.collections.links %}
              {% assign child_list_handle = link.title | handleize %}
              <li {% if linklists[child_list_handle].links != blank %}class="shop-nav--has-dropdown"{% endif %}>
                {{ link.title | link_to: link.url }}
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>

    </div>

  </div>

</div>
